view{
  padding: 0;
  margin: 0;
}
.container{
  background-color: #eceaea;
  min-height: 100%;
  box-sizing: border-box;
  overflow: hidden;
}
/*主体内容*/
.address-box{
  width: 100%;
  height: auto;
  padding-bottom: 130rpx;
}
.address-item{
  box-sizing: border-box;
  width: 100%;
  height: 240rpx;
  background-color: #fff;
  padding: 0 20rpx;
  color: #757375;
  font-size: 16px;
  margin-top: 20rpx;
}
.head{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}
.head text:first-child{
  float: left;
}
.head text:last-child{
  float: right;
}
.address-con{
  border-bottom: 2rpx solid #acacb7;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.address-bottom{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  padding: 20rpx 0;
}
.bottom-left{
  box-sizing: border-box;
  position: relative;
  height: 60rpx;
}
.bottom-right{
  box-sizing: border-box;
  position: relative;
  height: 60rpx;
  left: 300rpx;
}

/*脚部*/
.footBox{
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  color: #fff;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
}
.addAddress{
  width: 50%;
  height: 120rpx;
  background-color: red;
  float: left;
}
.tomine{
  width: 50%;
  height: 120rpx;
  background-color: rgb(233, 139, 51);
  float: right;
}
