/* pages/payment/payment.wxss */
view{
  margin: 0;
  padding: 0;
}
.container{
  background-color: #eceaea;
  min-height: 100%;
  box-sizing: border-box;
}
/*选择地址模块*/
.adddress{
  width: 100%;
  margin-top: 20rpx;
}
.weui-cells{
  position: relative;
  margin-top: 1.17647059em;
  background-color: #fff;
  line-height: 1.41176471;
  font-size: 30rpx;
}
.weui-cells_after-title{
  margin-top: 0;
}
.weui-cells::before{
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid #d9d9d9;
  color: #d9d9d9;
}
.weui-cells::after{
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #d9d9d9;
  color: #d9d9d9;
}
radio-group{
  display: block;
}
radio{
  display: block;
}
.weui-cell{
  padding: 10px 15px;
  position: relative;
  display: flex;
  align-items: center;
}
.weui-cell::before{
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid #d9d9d9;
  color: #d9d9d9;
  left: 15px;
}
.weui-cell__bd{
  flex: 1;
}
/*结算商品模块*/
.goodsList{
  width: 100%;
  background-color: #fff;
  padding-bottom: 100rpx;
}
.a-goods{
  width: 100%;
  overflow: hidden;
}
.a-goods-conts{
  display: flex;
  justify-content: space-between;
  padding-left: 30rpx;
  width: 870rpx;
  box-sizing: border-box;
  transition: margin-left 0.2s ease-in-out;
  flex-direction: column;
}
.goods-info{
  border-bottom: 1px solid #eee;
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0 30rpx 0rpx;
  width: 720rpx;
  box-sizing: border-box;
}
.goods-info .img-box{
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
  margin-right: 20rpx;
  background-color: #d8d8d8;
}
.goods-info .text-box{
  width: 530rpx;
  position: relative;
  left: 0rpx;
}
.goods-info .text-box .goods-title{
  font-size: 28rpx;
  color: #000;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  padding: 10rpx 20rpx 5rpx 0;
}
.goods-info .text-box .goods-label{
  font-size: 26rpx;
  color: #999;
  height: 38rpx;
  line-height: 38rpx;
  margin: 8rpx 0 25rpx 0;
}
.goods-info .text-box .goods-price{
  font-size: 26rpx;
  color: #e64340;
}
.goods-info .text-box .buy-num{
  width: 164rpx;
  height: 48rpx;
  line-height: 48rpx;
  position: absolute;
  right: 30rpx;
  bottom: 0;
  display: flex;
  font-size: 24rpx;
  text-align: center;
}
.goods-info .img-box .img{
  width: 160rpx;
  height: 160rpx;
}
.a-goods-conts .delete-btn{
  width: 120rpx;
  line-height: 220rpx;
  text-align: center;
  background-color: #e64340;
  font-size: 24rpx;
  color: #fff;
}
/*支付钱*/
.goPrice{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  position: fixed;
  bottom: 0px;
  left: 0px;
  background-color: #eceaea;
  padding-left: 20rpx;
}
.goPrice text:first-child{
  color: #e64340;
}
.button{
  display: inline-block;
  width: 200rpx;
  height: 80rpx;
  background-color: #FF4303;
  text-align: center;
  color: #fff;
  float: right;
}