<!--pages/start/start.wxml-->
<view class="container">
  <block>
    <image class="logo" src="/images/start/logo.png"></image>
  </block>
  <view class="content">
    <view class="mid_box">
      <view class="avatar">
        <open-data type="userAvatarUrl"></open-data>
      </view>
      <image class="wave" src="/images/start/wave.png"></image>
      <image class="wave wave-bg" src="/images/start/wave.png"></image>
    </view>
    <view class="bottom_box">
      <image class="ader" src="/images/start/adver.jpg"></image>
      <button open-type="getUserInfo" bindgetuserinfo="getUserInfo" class="btn_shop">
        <text>进入饰品店</text>
      </button>
      <text class="copyright">Powered by 禹庆鸿</text>
    </view>
  </view>
</view>
